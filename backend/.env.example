# HIS Backend Environment Variables
# Copy this to .env and fill in your values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=7860

# ============================================
# MongoDB Configuration
# ============================================
# Use MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hospital_his?retryWrites=true&w=majority

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://your-app.vercel.app,http://localhost:5173

# ============================================
# ML Services (Internal - same container)
# ============================================
ML_REVENUE_SERVICE_URL=http://localhost:5002
ML_PREDICT_SERVICE_URL=http://localhost:5003
OCR_SERVICE_URL=http://localhost:8000

# ============================================
# AI/LLM Configuration (Gemini)
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Email/SMTP Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@hospital-his.com

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
